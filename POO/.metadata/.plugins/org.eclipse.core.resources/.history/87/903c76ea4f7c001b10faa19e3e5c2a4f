package CLASSES;

public class ContaEspecial extends Conta {
	//double: limite
	//(-) usarLimite: double
	//Usar o limite do saldo se no momento do movimento o saldo fica negativo, ajusta no saldo e diminuir no limite.
	
	private double limite=1000;
	private double usarLimite;
	
	public ContaEspecial(int numero, String cpf) {
		super(numero, cpf);
	}

	public double getLimite() {
		return limite;
	}

	public void setLimite(double limite) {
		this.limite = limite;
	}

	public double getUsarLimite() {
		return usarLimite;
	}
	
	public void usarlimite(double valor) {
	if (valor <= saldo) {
		this.saldo = saldo - valor;
		System.out.println("Debito aprovado!!");
	}
	if (valor > saldo && valor<limite) {
		limite = (saldo+limite) - valor;
		saldo = 0;
		System.out.println("Debito aprovado!!");
		System.out.println("Voce entrou no limite especial. Verifique seu saldo e limite no seu App.");
	}
	if (valor > (saldo+limite)) {
		System.out.println("Esta operação excede o seu Saldo e o Limite!");
	}
	if(saldo == 0 && valor >limite) {
		System.out.println("Voce não tem saldo e limite suficiente!");
	}
  }
}






